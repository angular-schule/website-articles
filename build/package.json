{
  "name": "website-articles",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:init && npm run build:blog && npm run build:material",
    "build:init": "ts-node --project tsconfig.json build-init",
    "build:blog": "ts-node --project tsconfig.json build-blog",
    "build:material": "ts-node --project tsconfig.json build-material",
    "watch": "nodemon --watch ../blog --watch ../material --ignore 'dist/*' --ignore 'node_modules/*' --delay 2000ms -e md,jpg,png,svg --exec 'npm run build'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.7.7",
    "fs-extra": "^11.2.0",
    "highlight.js": "^11.10.0",
    "image-size": "^2.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.1",
    "marked-gfm-heading-id": "^4.1.3",
    "marked-highlight": "^2.2.3",
    "node-emoji": "^2.1.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "angular-cli-ghpages": "^3.0.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
